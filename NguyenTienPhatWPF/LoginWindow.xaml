<Window x:Class="NguyenTienPhatWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NguyenTienPhatWPF"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800" Background="#f9f9f9" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Rectangle HorizontalAlignment="Center" Height="290" Margin="0,65,0,0" Stroke="Black" VerticalAlignment="Top" Width="546" Fill="Bisque" RadiusX="20" RadiusY="20"/>
        <Label Content="Welcome" HorizontalAlignment="Center" Margin="0,65,0,0" VerticalAlignment="Top" Width="250" FontWeight="Bold" FontSize="30" Foreground="#1976d2" HorizontalContentAlignment="Center"/>
        <Label Content="Email" HorizontalAlignment="Left" Height="45" Margin="182,154,0,0" VerticalAlignment="Top" Width="107"/>
        <Label Content="Password" HorizontalAlignment="Left" Height="45" Margin="182,199,0,0" VerticalAlignment="Top" Width="107"/>
        <TextBox x:Name="EmailAddressTextBox" HorizontalAlignment="Left" Height="32" Margin="281,154,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="316" TabIndex="0"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" Height="32" Margin="281,204,0,0" VerticalAlignment="Top" Width="316" TabIndex="1"/>
        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Left" Margin="222,264,0,0" VerticalAlignment="Top" Height="38" Width="158" TabIndex="2" Click="LoginButton_Click" />
        <Button x:Name="QuitButton" Content="Quit" HorizontalAlignment="Left" Margin="400,264,0,0" VerticalAlignment="Top" Height="38" Width="158" TabIndex="3" Style="{StaticResource QuitButtonStyle}" Click="QuitButton_Click"/>
    </Grid>
</Window>
