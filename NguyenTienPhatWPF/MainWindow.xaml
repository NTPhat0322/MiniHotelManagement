<Window x:Class="NguyenTienPhatWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NguyenTienPhatWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="Bisque" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Label Content="Welcome Admin" HorizontalAlignment="Left" Margin="277,10,0,0" VerticalAlignment="Top" Width="250" FontWeight="Bold" FontSize="30" Foreground="#1976d2" HorizontalContentAlignment="Center"/>
        <Button x:Name="CustManagementButton" Content="Manage custormer" HorizontalAlignment="Left" Margin="268,107,0,0" VerticalAlignment="Top" Height="39" Width="268" TabIndex="0" Click="CustManagementButton_Click"/>
        <Button x:Name="RoomManagementButton" Content="Manage room" HorizontalAlignment="Left" Margin="268,170,0,0" VerticalAlignment="Top" Height="39" Width="268" TabIndex="1" Click="RoomManagementButton_Click"/>
        <Button x:Name="BookingManagementButton" Content="Manage booking reservation" HorizontalAlignment="Left" Margin="268,231,0,0" VerticalAlignment="Top" Height="39" Width="268" TabIndex="2" Click="BookingManagementButton_Click"/>
        <Button x:Name="ReportButton" Content="Report statistic" HorizontalAlignment="Left" Margin="268,292,0,0" VerticalAlignment="Top" Height="39" Width="268" TabIndex="3" Click="ReportButton_Click"/>
        <Button x:Name="QuitButton" Content="Quit" HorizontalAlignment="Left" Margin="268,355,0,0" VerticalAlignment="Top" Height="38" Width="268" Style="{StaticResource QuitButtonStyle}" TabIndex="4" Click="QuitButton_Click"/>
    </Grid>
</Window>
