<Window x:Class="NguyenTienPhatWPF.BookingDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NguyenTienPhatWPF"
        mc:Ignorable="d"
        Title="BookingDetailWindow" Height="640" Width="800" Background="#f9f9f9" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid Margin="20">
        <Label Content="Booking Room" HorizontalAlignment="Center" Height="46" VerticalAlignment="Top" FontSize="28"/>

        <Label Content="Customer:" HorizontalAlignment="Left" Height="46" Margin="10,59,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="CustomerComboBox" HorizontalAlignment="Left" Height="29" Margin="396,53,0,0" VerticalAlignment="Top" Width="354" TabIndex="0"/>

        <Label Content="Room:" HorizontalAlignment="Left" Height="46" Margin="10,112,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="RoomComboBox" HorizontalAlignment="Left" Height="29" Margin="312,114,0,0" VerticalAlignment="Top" Width="341" TabIndex="1"/>
        <Button x:Name="BookButton" Content="Book" HorizontalAlignment="Left" Margin="679,115,0,0" VerticalAlignment="Top" Height="28" Width="71" TabIndex="2" Click="BookButton_Click"/>

        <DataGrid x:Name="BookingDetailDataGrid" HorizontalAlignment="Center" Height="227" Margin="0,158,0,0" VerticalAlignment="Top" Width="740" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Room" Width="100" Binding="{Binding RoomInformation.RoomNumber}" />
                <DataGridTemplateColumn Header="Start Date" Width="150" >
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <DatePicker x:Name="StartDatePicker" SelectedDate="{Binding StartDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedDateChanged="StartDatePicker_SelectedDateChanged"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="End Date" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <DatePicker x:Name="EndDatePicker" SelectedDate="{Binding EndDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedDateChanged="EndDatePicker_SelectedDateChanged"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Price" Width="150" Binding="{Binding ActualPrice}" />
                <DataGridTemplateColumn Header="Remove" Width="60">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="BookingDetailRemoveButton" Content="Remove"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Test" Width="150" >
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Calendar SelectedDate="{Binding StartDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
            </DataGrid.Columns>
        </DataGrid>

        <Label Content="Total:" HorizontalAlignment="Left" Height="46" Margin="10,418,0,0" VerticalAlignment="Top"/>
        <TextBlock Text="200000" FontSize="18" FontWeight="Bold" Foreground="DarkRed" VerticalAlignment="Top" Margin="69,423,124,0" Height="41"/>

        <Button x:Name="SaveButton" Content="Save" HorizontalAlignment="Left" Margin="164,479,0,0" VerticalAlignment="Top" Height="46" Width="197" TabIndex="3" />
        <Button x:Name="CloseButton" Content="Close" HorizontalAlignment="Left" Margin="384,479,0,0" VerticalAlignment="Top" Height="46" Width="197" Style="{StaticResource QuitButtonStyle}" TabIndex="4" />
    </Grid>
</Window>
