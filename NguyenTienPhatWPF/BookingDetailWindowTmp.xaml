<Window x:Class="NguyenTienPhatWPF.BookingDetailWindowTmp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NguyenTienPhatWPF"
        mc:Ignorable="d"
        Title="BookingDetailWindowTmp" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Grid.ColumnSpan="2" Text="Đặt Phòng Khách Sạn" 
               FontSize="24" FontWeight="Bold" Foreground="#206080" 
               HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Chọn khách hàng -->
        <TextBlock Text="Khách hàng:" Grid.Row="1" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="1" Grid.Column="1"
              ItemsSource="{Binding Customers}"
              SelectedItem="{Binding SelectedCustomer}"
              DisplayMemberPath="FullName"
              IsEditable="True"
              Margin="0,0,0,0"
              Height="30"
              />

        <!-- Chọn phòng và thêm phòng -->
        <TextBlock Grid.Row="2" Text="Chọn phòng:" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
            <ComboBox Width="200"
                  ItemsSource="{Binding AvailableRooms}"
                  SelectedItem="{Binding SelectedRoom}"
                  DisplayMemberPath="RoomName"
                  Margin="0,0,10,0"/>
            <Button Content="Thêm phòng" 
                Command="{Binding AddRoomCommand}" Width="90"/>
        </StackPanel>

        <!-- Booking Details -->
        <GroupBox Grid.Row="3" Grid.ColumnSpan="2" Header="Danh sách phòng đã chọn" Margin="0,10,0,10">
            <DataGrid ItemsSource="{Binding BookingDetails}" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False" 
                  Margin="5"
                  SelectedItem="{Binding SelectedBookingDetail}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Phòng" Binding="{Binding Room.RoomName}" Width="*"/>
                    <DataGridTextColumn Header="Ngày nhận" Binding="{Binding CheckIn, StringFormat=d}" Width="110"/>
                    <DataGridTextColumn Header="Ngày trả" Binding="{Binding CheckOut, StringFormat=d}" Width="110"/>
                    <DataGridTextColumn Header="Giá" Binding="{Binding Price, StringFormat=N0}" Width="90"/>
                    <DataGridTextColumn Header="Dịch vụ" Binding="{Binding Service}" Width="120"/>
                    <DataGridTemplateColumn Header="Xóa" Width="60">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Xóa" 
                                    Command="{Binding DataContext.RemoveRoomCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Tổng tiền và nút thao tác -->
        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock Text="Tổng tiền:" FontWeight="Bold" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding TotalPrice, StringFormat=N0}" FontWeight="Bold" Foreground="DarkRed" VerticalAlignment="Center"/>
            <TextBlock Text="VNĐ" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button Content="Đặt phòng" Command="{Binding CreateBookingCommand}" Width="110" Margin="15,0,0,0"/>
            <Button Content="Hủy" Command="{Binding CancelCommand}" Width="80"/>
        </StackPanel>
    </Grid>
</Window>
